        gps.satellites.isValid())
    {
      hour = gps.time.hour();
      minute = gps.time.minute();
      second = gps.time.second();

      lat = gps.location.lat();
      lng = gps.location.lng();
      speed = gps.speed.kmph();

      numOfSats = gps.satellites.value();
    }
  }

  if (millis() - prevTime >= 15000 && lat != 0.0 && lng != 0.0) {

    if (diskCounter < EEPROM.length()) storeLocation(lat, lng);
    prevTime = millis();
  }

  led.setTextSize(2);
  led.print(speed);
  led.println(" kmph");

  displayTime(hour, minute, second);

  led.setTextSize(1);
  led.print("Disk: ");
  led.print((float) diskCounter / 1024.0 * 100.0, 0);
  led.println('%');

  led.print("Alt: ");
  led.println(alttitude, 2);

  led.print("Sats: ");
  led.println(numOfSats);
  led.display();
}
